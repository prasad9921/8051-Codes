ORG 00H
START:
MOV P1,#078H
MOV P2,#0FFH
ACALL DELAY1
MOV P1,#0FCH
MOV P2,#0F3H
ACALL DELAY2

MOV P1,#0B4H
MOV P2,#0FFH
ACALL DELAY1
MOV P1,#0F6H
MOV P2,#0F9H
ACALL DELAY2

MOV P1,#0D2H
MOV P2,#0FFH
ACALL DELAY1
MOV P1,#0F3H
MOV P2,#0FCH
ACALL DELAY2

MOV P1,#0E1H
MOV P2,#0FFH
ACALL DELAY1
MOV P1,#0F9H
MOV P2,#0F6H
ACALL DELAY2

LJMP START

DELAY1: MOV R0, #10
     HERE: DJNZ R0,HERE
     RET
DELAY2: MOV R1,#5
    HERE2: DJNZ R1,HERE2    
    RET 